html
{
  margin: 0;

  color: {{ theme.color }};
  background-color: {{ theme.backgroundColor }};
}

body
{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: flex-end;
  position: absolute;
  min-width: 800px;
  min-height: 600px;
  width: 100%;
  height: 100%;
  margin: 0;
}

a
{
  color: {{ theme.primary }};
}

iframe
{
  margin: none;
  border: none;
  
  color: {{ theme.color }};
  background-color: {{ theme.backgroundColor }};
}

#document
{
  flex: 1;
  width: calc(75% - 3px);
  border-left: 3px solid {{ theme.secondary }};
}

#graph
{
  height: 25%;
  width: 25%;
}

#tree
{
  height: 75%;
  width: 25%;
}

#tree ul
{
  padding: 0 0 0 1rem;
  margin: 0;
}

#tree ul li
{
  list-style-type: none;
}

#tree ul li:first-child:before
{
  padding: 0 0.25rem 0 0;
  content: '\250F';
}

#tree ul li:before
{
  padding: 0 0.25rem 0 0;
  content: '\2523';
}

#tree ul li:last-child:before
{
  padding: 0 0.25rem 0 0;
  content: '\2517';
}
